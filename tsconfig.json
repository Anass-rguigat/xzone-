{
    "compilerOptions": {
      "allowJs": true,
      "module": "ESNext",
      "moduleResolution": "bundler",
      "jsx": "react-jsx",
      "strict": true,
      "isolatedModules": true,
      "target": "ESNext",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "noEmit": true,
      "baseUrl": "./resources/js",  // Correct base URL for your JS files
      "paths": {
        "@/*": ["*"],  // This allows `@/` to point to the root of `resources/js`
        "ziggy-js": ["./vendor/tightenco/ziggy"]
      }
    },
    "include": [
      "resources/js/**/*.ts",
      "resources/js/**/*.tsx",
      "resources/js/**/*.d.ts"
    ]
  }
  